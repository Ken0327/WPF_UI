<Window x:Class="WPF_UI.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_UI"
        mc:Ignorable="d"
        Title="請輸入工號" Height="220" Width="300">
    <Grid>
        <StackPanel Margin="5">
            <Label Content="工號" Margin="5"/>
            <TextBox Name="txtResponse" Margin="0,0,0.200,0" Height="29"/>
            <Label Content="密碼" Margin="5"/>
            <TextBox Name="txtPassword" Height="31" Margin="0,0,0.200,0" />
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                <Button Content="_Ok" IsDefault="True" Margin="5" Name="btnOk" Click="btnOk_Click" Width="100" Height="30" />
                <Button Content="_Cancel" IsCancel="True" Margin="5" Name="btnCancel" Click="btnCancel_Click" Width="100" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
